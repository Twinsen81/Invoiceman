<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.fdev.backgroundchart.GradientChart
            android:id="@+id/invoices_available_gradientChart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:plusColorStart="@color/gradChartPlusColorStart"
            app:plusColorEnd="@color/gradChartPlusColorEnd"
            app:minusColorStart="@color/gradChartMinusColorStart"
            app:minusColorEnd="@color/gradChartMinusColorEnd"
            app:zoom="10"
            app:isBezier="true"
            />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/invoices_available_recyclerView" tools:listitem="@layout/item_invoice"/>


</androidx.constraintlayout.widget.ConstraintLayout>